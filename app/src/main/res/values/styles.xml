<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/Csc456ActionBar</item>

        <item name="actionBarStyle">@style/Csc456ActionBar</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:titleTextColor">@color/icons</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ActionBar styles -->
    <style name="Csc456ActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary</item>
        <item name="background">@color/primary</item>
        <item name="android:titleTextColor">@style/Csc456ActionBarText</item>
        <item name="titleTextColor">@style/Csc456ActionBarText</item>
    </style>

    <style name="Csc456ActionBarText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:titleTextColor">@color/primary_text</item>
    </style>

</resources>
